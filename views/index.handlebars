<p><marquee behavior="alternate">Eat.Da.Burger</marquee></p>



<div class="container" id="columns">
  <div class="row">
    <div class="col">
      <p1>BURGERS THAT ARE NOT DEVOURED</p1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
    </div>
    <div class="col">
      <p2>BURGERS THAT ARE DEVOURED</p2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
    </div>
  </div>





<h3>Add a Burger</h3>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit" id="submit">Add Burger</button>
</form>
